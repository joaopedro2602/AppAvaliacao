<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/text_center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite os Valores"
        android:textSize="20sp"/>
    <EditText
        android:id="@+id/edtNumber01"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/edtNumber01"
        android:autofillHints="name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edtNumber02"
        android:inputType="number"
        android:layout_gravity="center_horizontal"
        android:labelFor="@+id/edtNumber02"
        android:autofillHints="name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/avaliar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/rool_label"/>
</LinearLayout>
